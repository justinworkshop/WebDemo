<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_load_from_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载网络资源"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_load_from_assets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载Assets资源"
        app:layout_constraintTop_toBottomOf="@id/btn_load_from_net" />

    <Button
        android:id="@+id/btn_load_from_sdcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载Sdcard资源"
        app:layout_constraintTop_toBottomOf="@id/btn_load_from_assets" />

    <EditText
        android:id="@+id/et_load_define_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100px"
        android:text="10.10.31.91"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_load_define"
        app:layout_constraintTop_toBottomOf="@id/btn_load_from_sdcard" />

    <Button
        android:id="@+id/btn_load_define"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_load_from_sdcard" />



</android.support.constraint.ConstraintLayout>